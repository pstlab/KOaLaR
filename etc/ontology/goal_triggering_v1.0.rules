@prefix	rdf:	<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:	<http://www.w3.org/2000/01/rdf-schema#>.
@prefix ssn:	<http://purl.oclc.org/NET/ssnx/ssn#>.
@prefix dul:	<http://www.loa-cnr.it/ontologies/DUL.owl#>.
@prefix	koala:	<http://pst.istc.cnr.it/ontologies/2017/1/koala#>.

// assistive task inference

[dietary-reminding-task:
	(?a rdf:type koala:Cooking),
	makeSkolem(?condition, ?a), makeSkolem(?task, ?a)
	->
	print('[Goal] Inferring assistive task ', ?task, ' supporting assistive service ' koala:DietaryRemindingService)
	(?task rdf:type koala:DietaryRemindingTask), (?condition rdf:type koala:ObservedSituation), 
	(?task koala:hasPrecondition ?condition), (?task koala:supports koala:DietaryRemindingService)]

[bloodpressure-monitoring:
	(?e rdf:type koala:HighBloodPressure),
	makeSkolem(?condition, ?a), makeSkolem(?task, ?a)
	->
	print('[Goal] Inferring assistive task ', ?task, ' supporting assistive service ' koala:HearMonitoringService)
	(?task rdf:type koala:PhysiologicalParameterMonitoringTask), (?condition rdf:type koala:ObservedSituation), 
	(?task koala:hasPrecondition ?condition), (?task koala:supports koala:HearMonitoringService)]


